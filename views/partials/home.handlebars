<div>
    <h1>
        Hola! {{mensaje}}
        {{> contador}}
            <p>Hola, {{user.nombre}}</p>
            {{#if isTutor}}
                    {{#each cursos}}
                    <div>
                        <p>{{this.numComision}}</p>
                        <p>{{this.dias}}</p>
                        <p>{{this.horario}}</p>
                    </div>
                    {{/each}}
                <p>Sos un tutor</p>
            {{else}}
                <p>No sos tutor</p>
            {{/if}}
    </h1>
</div>